# MCP Server Configuration
MCP_SERVER_PORT=3002

# ngrok Configuration (for public exposure)
NGROK_AUTHTOKEN=your_ngrok_authtoken_here

# Development
NODE_ENV=development
# Local dev URL (update to your public https tunnel when exposing to ChatGPT)
MCP_SERVER_URL=http://localhost:3002

# Privy Authentication
PRIVY_APP_ID=your_privy_app_id
PRIVY_APP_SECRET=your_privy_app_secret
# Optional: Use if you configured a custom JWT verification key in Privy dashboard
PRIVY_JWT_VERIFICATION_KEY=your_privy_jwt_public_key
# Optional: Privy Client ID when using the embedded JS SDK for authorization UI
PRIVY_CLIENT_ID=optional_privy_client_id
# OAuth Facade Configuration
# Comma-separated list of OAuth client_ids allowed to authorize (ChatGPT uses `chatgpt-connector`)
OAUTH_ALLOWED_CLIENT_IDS=chatgpt-connector
# Comma-separated list of allowed redirect URIs (keep both ChatGPT domains for production)
OAUTH_ALLOWED_REDIRECT_URIS=https://chat.openai.com/connector_platform_oauth_redirect,https://chatgpt.com/connector_platform_oauth_redirect
# OAuth issuer URL (must match your public https endpoint when accessed by ChatGPT)
OAUTH_ISSUER_URL=http://localhost:3002
# Resource indicator that represents this MCP server (update to https tunnel when public)
OAUTH_RESOURCE_INDICATOR=http://localhost:3002/mcp
# Scopes advertised/allowed during authorization
OAUTH_SUPPORTED_SCOPES=openid profile email offline_access
# Default scopes granted if the client omits the scope param
OAUTH_DEFAULT_SCOPES=openid profile email offline_access
# TTL (seconds) for issued access tokens
OAUTH_ACCESS_TOKEN_TTL_SECONDS=3600
# TTL (seconds) for refresh tokens (only issued when scope includes offline_access)
OAUTH_REFRESH_TOKEN_TTL_SECONDS=1209600
# TTL (seconds) for authorization codes returned from /oauth/authorize
OAUTH_CODE_TTL_SECONDS=300

# Development Overrides
DANGEROUSLY_OMIT_AUTH=false
