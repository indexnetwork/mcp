{
  "name": "@indexnetwork/mcp-server",
  "version": "1.0.0",
  "description": "Minimal MCP server for Index Network ChatGPT integration",
  "main": "dist/server.js",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"cd widgets && npm run dev\" \"nodemon --exec ts-node src/server.ts\"",
    "build:widgets": "cd widgets && npm run build",
    "build": "npm run build:widgets && tsc",
    "start": "node dist/server.js",
    "test": "npx @modelcontextprotocol/inspector@latest"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.19.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "mcp",
    "chatgpt",
    "index-network"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
